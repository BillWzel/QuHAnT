  script(language='javascript').
    $(document).ready(function() {
      $('#confirm_msg').hide()
      $('#captcharemind').hide()
      if('#{success}' == 'Sent') {
        $('#sent_div').hide()
        $('#confirm_msg').show()
        $('.Title').hide()
      }
      $('#sendform').submit(function() {
        $(this).ajaxSubmit({
          error: function(xhr) {
            status('Error: ' + xhr.status)
          },
          success: function(response) {
            console.log(response)
          }
        })
        return false
      })
    })

    function sendmessage() {
      var formdat = JSON.parse(JSON.stringify($('#thisform').serializeArray()))
      var captcharesponse = document.getElementById('g-recaptcha-response').value;
      if (captcharesponse.length > 0) {
        if (captcharesponse == null || captcharesponse == undefined) {
          alert('bad code!')
        }
        $.ajax({
          type: 'post',
          url: '/company/contacted',
          data: {secret: captcharesponse,formdata: formdat},
        }).done( function() {
          $('#sent_div').hide()
          $('#confirm_msg').show()
          $('.Title').hide()
        }).fail( function() {
        })
      } else {
        $('#captcharemind').show()
      }
    }


  // end script

